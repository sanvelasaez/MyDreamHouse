{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<body>
<div class="container pt-4 pb-2" id="image2">
    <div id="div-login">
        <div id="div-img-login">
            <img id="img-login" src="/data/images/fondos/casaFondo4.jpg"></img>
        </div>
        <div class="" id="div-form-login">
        <form id="formLogin" method="post">
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Has iniciado sesión como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center mt-2 text-dark">Identifícate</h1>
            <div class="form-group divs-login">
                <label class="text-dark" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputs-login" placeholder="Introduzca email" required autofocus>
            </div>
            <div class="form-group divs-login">
                <label class="text-dark" for="inputPassword">Contraseña</label>
                <input type="password" name="password" id="" class="form-control inputs-login" placeholder="Contraseña" required>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            </div>

            <button id="btn-login" class="btn btn-lg btn-info mt-3" type="submit">
                <img src="{{ asset('data/images/user.png') }}" />
                Entrar
            </button>
        </form>
        </div>
    </div>
 </div>
</body>
{% endblock %}
